<?xml version="1.0"?>
<h:html xmlns="http://www.w3.org/2002/xforms"
        xmlns:h="http://www.w3.org/1999/xhtml" >
    <h:head>
        <h:title>External Secondary Instance CSV</h:title>
        <model>
            <instance>
                <data id="external-select-csv">
                    <first/>
                    <second/>
                    <meta>
                        <instanceID/>
                    </meta>
                </data>
            </instance>

            <instance id="external-csv" src="jr://file-csv/external-select.csv" />

            <bind nodeset="/data/first" type="select1"/>
            <bind nodeset="/data/external-csv" type="select1"/>
            <bind calculate="concat('uuid:', uuid())" nodeset="/data/meta/instanceID" readonly="true()" type="string"/>
        </model>
    </h:head>
    <h:body>
        <select1 ref="/data/first">
            <label>First</label>
            <itemset nodeset="instance('external-csv')/root/item[first = '']">
                <value ref="name"/>
                <label ref="label"/>
            </itemset>
        </select1>

        <select1 ref="/data/second">
            <label>Second</label>
            <itemset nodeset="instance('external-csv')/root/item[first = /data/first]">
                <value ref="name"/>
                <label ref="label"/>
            </itemset>
        </select1>
    </h:body>
</h:html>
