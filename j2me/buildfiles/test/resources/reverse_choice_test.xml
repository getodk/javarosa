<h:html xmlns="http://www.w3.org/2002/xforms"
        xmlns:h="http://www.w3.org/1999/xhtml"
        xmlns:ev="http://www.w3.org/2001/xml-events"
        xmlns:xsd="http://www.w3.org/2001/XMLSchema"
        xmlns:jr="http://openrosa.org/javarosa">
  <h:head>
    <h:meta name="name" content="demo" />
    <h:meta name="version" content="0.1" />
    <h:title>rev choice test</h:title>

    <model>
      <instance>
		<x>
			<q />
			
			<info />

		</x>

      </instance>
      
      <itext>
      	<translation lang="en">
      		<text id="a"><value>AAA</value></text>
      		<text id="b"><value>BBB</value></text>
      		<text id="c"><value>CCC</value></text>
      		<text id="d"><value>DDD</value></text>
      	</translation>
      	<translation lang="sp">
      		<text id="a"><value>spAAA</value></text>
      		<text id="b"><value>spBBB</value></text>
      		<text id="c"><value>spCCC</value></text>
      		<text id="d"><value>spDDD</value></text>
      	</translation>
      </itext>
      
    </model>
  </h:head>
  <h:body>
  
	<select1 ref="q">
	<label>test</label>
	<item><label ref="jr:itext('a')" /><value>c1</value></item>
	<item><label ref="jr:itext('b')" /><value>c2</value></item>
	<item><label ref="jr:itext('c')" /><value>c3</value></item>
	<item><label ref="jr:itext('d')" /><value>c4</value></item>
	</select1>
	
	<trigger ref="info">
		<label>[<output value="jr:choice-name(../q, '/x/q')" />]</label>
	</trigger>
	
  </h:body>
</h:html>